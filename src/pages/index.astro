---
import Projects from "fulldev-ui/blocks/Projects1.astro";
import Layout from "fulldev-ui/structures/Layout.astro";
import { getCollection } from "astro:content";

const hashcodes = await getCollection("hashcodes");
---

<Layout class="dark">
    <Projects
        tagline="Hashy"
        heading="Hashcodes"
        paragraph="Google Hash Code was a global team programming competition organized by Google, where participants solved real-world engineering problems in algorithms and optimization within a limited time."
        buttons={[{icon: 'brand-github',text: 'Github', href: 'https://github.com/phi-bre/hashy'}, {icon: 'coffee',text: 'Buy me a coffee', href: 'https://buymeacoffee.com/phibre' }]}
        cards={hashcodes.map(hashcode => ({
            badges: [hashcode.data.year, hashcode.data.round],
            heading: hashcode.data.title,
            paragraph: '',
            href: `/${hashcode.id}`,
            image: {src: ''},
        }))}
    />
</Layout>
